# navigation
shift + ctrl + alt - h : yabai -m window --focus west
shift + ctrl + alt - j : yabai -m window --focus south
shift + ctrl + alt - k : yabai -m window --focus north
shift + ctrl + alt - l : yabai -m window --focus east

# move windows
cmd + ctrl + alt + shift - h : yabai -m window --warp west
cmd + ctrl + alt + shift - j : yabai -m window --warp south
cmd + ctrl + alt + shift - k : yabai -m window --warp north
cmd + ctrl + alt + shift - l : yabai -m window --warp east

# resize windows
shift + ctrl + alt - a : yabai -m window --resize left:-50:0; yabai -m window --resize right:-50:0
shift + ctrl + alt - x : yabai -m window --resize bottom:0:50; yabai -m window --resize top:0:50
shift + ctrl + alt - z : yabai -m window --resize top:0:-50; yabai -m window --resize bottom:0:-50
shift + ctrl + alt - d : yabai -m window --resize right:50:0; yabai -m window --resize left:50:0

# equalize size of windows
shift + ctrl + alt - s : yabai -m space --balance

# float or unfloat window
ctrl + alt + shift - f : yabai -m window --toggle float; yabai -m window --toggle border
